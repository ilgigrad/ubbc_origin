Options -Indexes
RewriteEngine On
# Autoriser l’accès aux fichiers ACME
RewriteCond %{REQUEST_URI} ^/\.well-known/acme-challenge/
RewriteRule ^ - [L]

# Rediriger vers HTTPS si l'en-tête indique que la requête était HTTP
RewriteCond %{HTTPS} off
RewriteRule ^ https://ubbc.fr%{REQUEST_URI} [L,R=301]

# Réécriture des URLs pour les fichiers PHP sans extension
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{DOCUMENT_ROOT}/$1.php -f
RewriteRule ^(([A-Za-z0-9\-]+/)*[A-Za-z0-9\-]+)?$ $1.php [L]

# php -- BEGIN cPanel-generated handler, do not edit
# Set the “ea-php74” package as the default “PHP” programming language.
<IfModule mime_module>
  AddHandler application/x-httpd-ea-php74___lsphp .php .php7 .phtml
</IfModule>
# php -- END cPanel-generated handler, do not edit
